{
    ".CloseButton": {
        "background-color": "#ff3333"
    },
    "QPushButton": {
        "background-color": "#40424a",
        "color": "white",
        "border": "none",
        "border-radius": "10px",
        "padding": "5px 10px"
    },
    "QPushButton:hover": {
        "background-color": "#4d4f57"
    },
    "QPushButton:pressed": {
        "background-color": "#21232b"
    },


    "QTabWidget:pane": {
        "border": "1px solid #ccc;"
    },
    "QTabBar:tab": {
        "background": "#ffffff;",
        "padding": "10px;",
        "border-radius": "5px"
    },
    "QTabBar:tab:selected": {
        "background": "#d0d0d0;"
    },
    "QTabBar:tab:hover": {
        "background": "#e0e0e0;"
    },

    "QMainWindow": {
        "background-color": "#ffffff"
    },
    "QLineEdit": {
        "border": "1px solid #aaa",
        "border-radius": "10px",
        "padding": "5px"
    }
}
